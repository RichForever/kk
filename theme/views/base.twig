<!doctype html>
<html {{ site.language_attributes }} class="scroll-smooth {{ page == '404' ? 'h-full' : '' }}">
<head>
    <meta charset="{{ site.charset }}"/>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Description here">
    <link rel="pingback" href="{{ site.pingback_url }}"/>
    {{ function('wp_head') }}
    <style>
        [x-cloak] {
            display: none;
        }
    </style>
</head>

{% set isMenuInverted = is_menu_inverted ? 'true' : 'false' %}

{% if fn('is_single') %}
    {% set isMenuInverted = 'true' %}
{% endif %}

{% if fn('is_category') %}
    {% set isMenuInverted = 'true' %}
{% endif %}

{% if fn('is_search') %}
    {% set isMenuInverted = 'true' %}
{% endif %}

<body
    class="{{ body_class }}"
    data-template="base.twig"
    x-data="{
        isMenuInverted: {{ isMenuInverted }}
    }"
>
{{ function('wp_body_open') }}
{% include 'header.twig' %}

{% block content %}
    Sorry, no content
{% endblock %}

{% block footer %}
    {% include 'footer.twig' %}
    {{ function('wp_footer') }}
{% endblock %}
</body>
</html>
