{% set boxedClass = '' %}
{% if 'is-style-boxed' in block.customClass %}
    {% set boxedClass = 'px-4 sm:px-6 py-16 md:px-12 md:py-12 2xl:px-16 2xl:py-16 bg-[#F5F9FF] rounded-lg' %}
{% elseif 'is-style-boxed-inverted' in block.customClass %}
    {% set boxedClass = 'px-4 sm:px-6 py-16 md:px-12 md:py-12 2xl:px-16 2xl:py-16 bg-[#F5F9FF] rounded-lg' %}
{% else %}
    {% set boxedClass = '' %}
{% endif %}

{% set invertedClassFirst = '' %}
{% set invertedClassSecond = '' %}
{% if 'is-style-default-inverted' in block.customClass %}
    {% set invertedClassFirst = 'lg:col-start-7 lg:col-span-6 2xl:col-start-7 2xl:col-span-6' %}
    {% set invertedClassSecond = 'lg:col-span-5 lg:col-start-1 2xl:col-span-4' %}
{% elseif 'is-style-boxed-inverted' in block.customClass %}
    {% set invertedClassFirst = 'lg:col-start-7 lg:col-span-6 2xl:col-start-7 2xl:col-span-6' %}
    {% set invertedClassSecond = 'lg:col-span-5 lg:col-start-1 2xl:col-span-4' %}
{% else %}
    {% set invertedClassFirst = 'lg:col-span-6 lg:col-start-1' %}
    {% set invertedClassSecond = 'lg:col-start-8 lg:col-span-5 2xl:col-start-9 2xl:col-span-4' %}
{% endif %}

<section class="kk-block section px-4 {{ block.customClass }}" {{ block.anchor }}
         data-block="{{ block.name|replace({'kk/': ''}) }}">
    <div class="container items-center py-20 xl:py-32 rounded-lg text-center lg:text-left {{ boxedClass }}">
        <div class="gap-4 flex flex-col-reverse items-center lg:grid lg:grid-cols-12 lg:items-center lg:grid-flow-dense">
            <div class="{{ invertedClassFirst }}">
                {% include 'partial/block-section-subtitle.twig' with {
                    'content': fields.subtitle
                } %}
                <InnerBlocks
                        allowedBlocks="{{ allowed_blocks | json_encode() | escape('html_attr') }}"
                        template="{{ allowed_blocks_template | json_encode() | escape('html_attr') }}"
                />
            </div>
            {% if fields.image %}
                <div class="{{ invertedClassSecond }}">
                    <img src="{{ fields.image.url }}" alt="" class="">
                </div>
            {% endif %}
        </div>
    </div>
</section>