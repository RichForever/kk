<section class="kk-block section px-4 {{ block.customClass }}" {{ block.anchor }}
         data-block="{{ block.name|replace({'kk/': ''}) }}">
    <div class="container items-center text-center md:text-left">
        <div class="lg:grid lg:grid-cols-12 gap-4">
            <div class="lg:col-span-6 lg:col-start-1 xl:col-span-7 2xl:col-span-6 mb-12 2xl:col-span-6">
                <span class="bg-[#E9F1FC] text-blue-400 text-sm font-bold px-6 py-2 mb-6 rounded-full inline-block">{{ fields.subtitle }}</span>
                <InnerBlocks
                        allowedBlocks="{{ allowed_blocks | json_encode() | escape('html_attr') }}"
                        template="{{ allowed_blocks_template | json_encode() | escape('html_attr') }}"
                />
            </div>
            {% if fields.contact_repeater %}
                <div class="lg:col-start-8 lg:col-span-5 xl:col-start-9 xl:col-span-4">
                    {% for item in fields.contact_repeater %}
                        {% include 'partial/block-contact-item.twig' %}
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>
</section>