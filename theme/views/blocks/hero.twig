{% set blockBackground = 'is-style-light' in block.customClass ? 'bg-[#F5F9FF]' : 'bg-gradient-to-br from-[#092342] to-[#06172D]' %}

<section id="block__{{ block.id }}" class="kk-block section px-4 relative {{ block.customClass }} {{ blockBackground }} {{ fixed_menu ? 'pt-28 xl:pt-36' : '' }}" {{ block.anchor }}
         data-block="{{ block.name|replace({'kk/': ''}) }}">
    <div class="container items-center rounded-lg text-center {{ fields.overlap ? 'pt-8 pb-16 xl:pb-24' : 'py-20 xl:py-32' }}">
        <div class="flex flex-col lg:grid lg:grid-cols-12 gap-4 z-10 relative lg:items-center">
            <div class="lg:col-span-6 2xl:col-span-6 col-start-1 text-center lg:text-left">
                <InnerBlocks
                        allowedBlocks="{{ allowed_blocks | json_encode() | escape('html_attr') }}"
                        template="{{ allowed_blocks_template | json_encode() | escape('html_attr') }}"
                />
            </div>
            <div class="lg:col-start-7 lg:col-span-6">
                {% if fields.image %}
                    <div class="">
                        <img src="{{ fields.image.url }}" alt="" class="w-full h-auto block">
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    {% if fields.overlap %}
        <style>
            #block__{{ block.id }} + section.kk-block {
                position: relative;
                margin-top: -4rem;
                z-index: 99;
            }
            @media screen and (min-width: 1280px) {
                #block__{{ block.id }} + section.kk-block {
                    margin-top: -5rem;
                }
            }
        </style>
    {% endif %}
</section>