{% set boxedClass = 'is-style-boxed' in block.customClass ? 'px-4 sm:px-6 py-16 md:px-12 md:py-12 2xl:px-16 2xl:py-16 bg-[#F5F9FF] rounded-lg' : '' %}

<section class="kk-block section px-4 {{ block.customClass }}" {{ block.anchor }}
         data-block="{{ block.name|replace({'kk/': ''}) }}">
    <div class="container items-center py-20 xl:py-32 rounded-lg text-center md:text-left {{ boxedClass }}">
        <div class="gap-4 lg:grid lg:grid-cols-12">
            <div class="mb-16 text-center 2xl:mb-20 lg:col-span-8 lg:col-start-3">
                {% include 'partial/block-section-subtitle.twig' with {
                    'content': fields.subtitle
                } %}
                <InnerBlocks
                        allowedBlocks="{{ allowed_blocks | json_encode() | escape('html_attr') }}"
                        template="{{ allowed_blocks_template | json_encode() | escape('html_attr') }}"
                />
            </div>
        </div>
        {% if fields.info_boxes_repeater %}
            <div class="flex flex-col gap-6 md:grid md:gap-4 md:grid-cols-2 xl:grid-cols-3">
                {% for box in fields.info_boxes_repeater %}
                    <div class="">
                        {% include 'partial/block-info-box.twig' %}
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
</section>