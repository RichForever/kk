<section class="kk-block section px-4 {{ block.customClass }}" {{ block.anchor }}
         data-block="{{ block.name|replace({'kk/': ''}) }}">
    <div class="container items-center py-20 xl:py-32 rounded-lg text-center md:text-left">
        <div class="gap-4 lg:grid lg:grid-cols-12">
            <div class="mb-16 text-center 2xl:mb-20 lg:col-span-8 lg:col-start-3">
                {% include 'partial/block-section-subtitle.twig' with {
                    'content': fields.subtitle
                } %}
                <InnerBlocks
                        allowedBlocks="{{ allowed_blocks | json_encode() | escape('html_attr') }}"
                        template="{{ allowed_blocks_template | json_encode() | escape('html_attr') }}"
                />
            </div>
        </div>
        <div class="gap-4">
            {% if posts %}
                <div class="flex flex-col gap-12 lg:flex lg:flex-row lg:gap-x-4 lg:gap-y-16 xl:gap-9 2xl:gap-12">
                    {% for post in posts %}
                        <div class="lg:w-1/2 xl:w-1/3">
                            {% include 'partial/block-post-card.twig' %}
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>
</section>