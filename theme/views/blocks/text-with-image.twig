{% set boxedClass = '' %}
{% if 'is-style-boxed' in block.customClass or 'is-style-boxed-inverted' in block.customClass %}
    {% set boxedClass = 'px-4 sm:px-6 py-16 md:px-12 md:py-12 2xl:px-16 2xl:py-16 bg-[#F5F9FF] rounded-lg' %}
{% else %}
    {% set boxedClass = '' %}
{% endif %}

{% set reversedClass = '' %}
{% if 'is-style-inverted' in block.customClass or 'is-style-boxed-inverted' in block.customClass %}
    {% set reversedClass = 'lg:flex-row-reverse' %}
{% else %}
    {% set reversedClass = 'lg:flex-row' %}
{% endif %}

<section class="kk-block section px-4 {{ block.customClass }}" {{ block.anchor }}
         data-block="{{ block.name|replace({'kk/': ''}) }}">
    <div class="container items-center py-20 xl:py-32 rounded-lg text-center lg:text-left {{ boxedClass }}">
        <div class="gap-12 flex flex-col-reverse {{ reversedClass }} lg:items-center lg:justify-between xl:gap-32">
            <div class="lg:w-7/12 xl:w-6/12">
                {% include 'partial/block-section-subtitle.twig' with {
                    'content': fields.subtitle
                } %}
                <InnerBlocks
                        allowedBlocks="{{ allowed_blocks | json_encode() | escape('html_attr') }}"
                        template="{{ allowed_blocks_template | json_encode() | escape('html_attr') }}"
                />
            </div>
            {% if fields.image %}
                <div class="lg:w-5/12">
                    <img src="{{ fields.image.url }}" alt="" class="h-auto w-full">
                </div>
            {% endif %}
        </div>
    </div>
</section>