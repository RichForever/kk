<ul
    class="p-2 rounded-lg bg-blue-50 lg:bg-blue-50 lg:origin-top-right lg:absolute lg:top-8 lg:right-0 lg:-translate-x-0 lg:min-w-[240px] lg:shadow-xl {{ className }}"
    x-show="openSubmenu"
    :class="openSubmenu ? 'menu-submenu--active' : ''"
    x-cloak
>
    {% for item in items %}
        <li class="{{ item.classes | join(' ') }}">
            <a
                    @click="open = false"
                    target="{{ item.target }}"
                    href="{{ item.link }}"
                    class="bg-transparent text-black-500 hover:bg-blue-500 hover:text-white-500 px-3 py-2 rounded w-full inline-block"
            >{{ item.title }}</a>
        </li>
    {% endfor %}
</ul>