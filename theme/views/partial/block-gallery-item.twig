<div class="relative w-full">
    <a
            href="{{ get_image(item) }}"
            class="absolute top-3 right-3 inline-block rounded-lg p-3 text-blue-500 transition-all duration-300 glightbox bg-white-500 hover:bg-blue-50 lg:top-4 lg:right-4"
            data-gallery="gallery-{{ block.id }}"
            aria-label="Click to zoom image"
    >
        {{ function('wpstarter_get_icon', 'icon-zoom') }}
    </a>
    {% include 'atoms/image.twig' with {
        'imageItem': item,
        'imageSize': 'image-480-square',
        'customClass': 'w-full h-auto rounded-lg object-cover aspect-square'
    } %}
</div>