<section id="block__{{ block.id }}"
         class="kk-block section px-4 relative {{ block.customClass }} bg-gradient-to-br from-[#092342] to-[#06172D]" {{ block.anchor }}
         data-block="{{ block.name|replace({'kk/': ''}) }}">
    <div class="container items-center rounded-lg py-20 text-center xl:py-32">
        <div class="background-squares">
            <img src="{{ theme.link }}/assets/images/sqaures-top-light.svg"
                 alt=""
                 class="absolute top-0 right-0 h-1/2 sm:h-3/4 lg:h-full">
        </div>
        <div class="relative text-left lg:w-10/12">
            {% block title %}<h1 class="text-white-500">{{ post.title }}</h1>{% endblock %}
            {% block subtitle %}<h2 class="font-normal text-blue-100 text-md">Krzysztof Andrzej Kaczmarek radca prawny</h2>{% endblock %}
        </div>
    </div>
</section>