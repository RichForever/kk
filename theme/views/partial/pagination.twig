{% if posts.pagination.pages is not empty %}
    <nav class="mt-10 flex items-center justify-between border-t border-gray-200 px-4 sm:px-0">
        <div class="flex w-0 flex-1">
            {% if posts.pagination.prev %}
                <a href="{{ posts.pagination.prev.link }}" class="-mt-px inline-flex items-center border-t-2 border-transparent pt-4 pr-1 text-lg font-medium leading-5 text-indigo-700 transition duration-150 ease-in-out hover:text-indigo-700-alt hover:border-indigo-700 focus:border-gray-400 focus:text-gray-700 focus:outline-none">
                    <svg class="mr-3 h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M7.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l2.293 2.293a1 1 0 010 1.414z" clip-rule="evenodd" />
                    </svg>
                    Previous
                </a>
            {% else %}
                <a href="#" class="-mt-px inline-flex items-center border-t-2 border-transparent pt-4 pr-1 text-lg font-medium leading-5 text-gray-300 transition duration-150 ease-in-out hover:border-gray-300 hover:text-gray-700 focus:border-gray-400 focus:text-gray-700 focus:outline-none">
                    <svg class="mr-3 h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M7.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l2.293 2.293a1 1 0 010 1.414z" clip-rule="evenodd" />
                    </svg>
                    Previous
                </a>
            {% endif %}
        </div>
        <div class="hidden md:flex">
            {% for page in posts.pagination.pages %}
                {% if page.link %}
                    <a href="{{ page.link }}" class="-mt-px inline-flex items-center border-t-2 border-transparent px-4 pt-4 text-lg font-medium leading-5 text-gray-500 transition duration-150 ease-in-out hover:text-indigo-700-alt hover:border-gray-400 focus:border-gray-400 focus:text-gray-700 focus:outline-none">
                    {{ page.title }}
                    </a>
                {% else %}
                    <a href="{{ page.link }}" class="-mt-px inline-flex items-center border-t-2 border-indigo-700 px-4 pt-4 text-lg font-medium leading-5 text-indigo-700 transition duration-150 ease-in-out hover:text-indigo-700-alt hover:border-gray-400 focus:border-gray-400 focus:text-gray-700 focus:outline-none">
                    {{ page.title }}
                    </a>
                {% endif %}
            {% endfor %}
        </div>
        <div class="flex w-0 flex-1 justify-end">
            {% if posts.pagination.next %}
                <a href="{{ posts.pagination.next.link }}" class="-mt-px inline-flex items-center border-t-2 border-transparent pt-4 pl-1 text-lg font-medium leading-5 text-indigo-700 transition duration-150 ease-in-out hover:text-indigo-700-alt hover:border-indigo-700 focus:border-gray-400 focus:text-gray-700 focus:outline-none">
                    Next
                    <svg class="ml-3 h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                    </svg>
                </a>
            {% else %}
                <a href="#" class="-mt-px inline-flex items-center border-t-2 border-transparent pt-4 pl-1 text-lg font-medium leading-5 text-gray-300 transition duration-150 ease-in-out hover:border-gray-300 hover:text-gray-700 focus:border-gray-400 focus:text-gray-700 focus:outline-none">
                    Next
                    <svg class="ml-3 h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                    </svg>
                </a>
            {% endif %}
        </div>
    </nav>
{% endif %}
