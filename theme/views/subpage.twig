{% extends "base.twig" %}

{% block content %}

    {% embed 'partial/page-title.twig' %}
        {% block title %}
            <h1 class="text-white-500 mb-0">{{ post.title }}</h1>
        {% endblock %}
        {% block subtitle %}
            <!-- If you have a subtitle for the archive page, include it here -->
        {% endblock %}
    {% endembed %}

    <div class="section px-4 lg:px-8">
        <div class="container py-20 xl:py-32">
            <div class="flex flex-col gap-12">

                <div class="lg:w-8/12 flex flex-col gap-20">
                    <div class="prose prose-blue max-w-full w-full">
                        {{ post.content }}
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
