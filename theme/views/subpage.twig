{% extends "base.twig" %}

{% block content %}

    {% embed 'partial/page-title.twig' %}
        {% block title %}
            <h1 class="mb-0 text-white-500">{{ post.title }}</h1>
        {% endblock %}
        {% block subtitle %}
            <!-- If you have a subtitle for the archive page, include it here -->
        {% endblock %}
    {% endembed %}

    <div class="px-4 section lg:px-8">
        <div class="container py-20 xl:py-32">
            <div class="flex flex-col gap-12">

                <div class="flex flex-col gap-20 lg:w-8/12">
                    <div class="w-full max-w-full prose prose-blue">
                        {{ post.content }}
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
